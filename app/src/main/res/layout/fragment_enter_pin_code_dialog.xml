<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MenuDialogFragmentFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bubbles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/accountLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/enterAccountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Enter you CPT PIN-code\nto login"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountLogo" />

        <com.cryptaur.lottery.view.CheckableImageButton
            android:id="@+id/pinDigit1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_dot"
            app:is_checked="true"
            app:layout_constraintRight_toLeftOf="@+id/accountLogo"
            app:layout_constraintTop_toBottomOf="@+id/enterAccountLabel" />

        <com.cryptaur.lottery.view.CheckableImageButton
            android:id="@+id/pinDigit2"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintLeft_toRightOf="@+id/pinDigit1"
            app:layout_constraintTop_toTopOf="@+id/pinDigit1" />

        <com.cryptaur.lottery.view.CheckableImageButton
            android:id="@+id/pinDigit3"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintRight_toLeftOf="@+id/pinDigit4"
            app:layout_constraintTop_toTopOf="@+id/pinDigit1" />

        <com.cryptaur.lottery.view.CheckableImageButton
            android:id="@+id/pinDigit4"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintLeft_toRightOf="@+id/accountLogo"
            app:layout_constraintTop_toTopOf="@+id/pinDigit1" />


        <Button
            android:id="@+id/button1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_transp_accented"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinDigit1" />


        <Button
            android:id="@+id/button3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_transp_accented"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />


        <Button
            android:id="@+id/button6"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5" />

        <Button
            android:id="@+id/button7"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button8" />

        <Button
            android:id="@+id/button8"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_transp_accented"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />


        <Button
            android:id="@+id/button9"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button8" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="96dp"
            android:background="@drawable/btn_transp_accented"
            android:text="@string/exit"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/button0"
            app:layout_constraintTop_toTopOf="@+id/button0" />

        <Button
            android:id="@+id/button0"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_transp_accented"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" />


        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:layout_marginLeft="96dp"
            android:background="@drawable/btn_transp_accented"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/button0"
            app:layout_constraintLeft_toLeftOf="@+id/button0"
            app:layout_constraintTop_toTopOf="@+id/button0"
            app:srcCompat="@drawable/ic_backspase" />


        <TextView
            android:id="@+id/useLoginAndPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_transp_accented"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:text="Enter by login and password"
            android:textColor="@color/blueGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button0" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/closeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_transp_accented"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_menu_close" />

    <FrameLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>