<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_selected="true">
        <layer-list>
            <item android:width="11dp" android:height="11dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/hotPink" />
                    <stroke android:width="2.1dp" android:color="@color/hotPink" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true" android:state_selected="false">
        <layer-list>
            <item android:width="11dp" android:height="11dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/blueGrey" />
                    <stroke android:width="2.1dp" android:color="@color/blueGrey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false" android:state_selected="false">
        <layer-list>
            <item android:width="11dp" android:height="11dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="oval">
                    <stroke android:width="2.1dp" android:color="@color/blueGrey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false" android:state_selected="true">
        <layer-list>
            <item android:width="11dp" android:height="11dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp">
                <shape android:shape="oval">
                    <stroke android:width="2.1dp" android:color="@color/hotPink" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>