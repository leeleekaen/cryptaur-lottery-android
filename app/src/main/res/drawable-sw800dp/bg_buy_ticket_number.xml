<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle"></shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <solid android:color="#000fff" />
                    <gradient android:angle="315" android:endColor="#FFF962FF" android:startColor="#FF3FBDFF" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>