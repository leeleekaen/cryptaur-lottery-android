<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">42dp</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">42dp</item>
        <item name="colorControlNormal">@color/heather</item>
        <item name="android:textColor">@color/heather</item>

    </style>

    <style name="AppTheme.Dialog" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--        <item name="android:background">@color/dark</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">@color/blueGrey</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="colorControlNormal">@color/blueGrey</item>
        <item name="colorControlActivated">@color/blueGreyLight</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.RulesHeader">
        <item name="android:textColor">@color/heather</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AppTheme.RulesBody">
        <item name="android:textColor">@color/twilight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="AppTheme.HowToPlayHeader">
        <item name="android:textColor">@color/heather</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AppTheme.HowToPlayBody">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="AppTheme.DistributionNumber">
        <item name="android:background">@drawable/rules_number_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/twilight</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppTheme.DistributionText">
        <item name="android:textColor">@color/twilight</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
